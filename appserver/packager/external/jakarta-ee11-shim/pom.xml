<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>external</artifactId>
        <groupId>fish.payara.server.internal.packager</groupId>
        <version>7.2025.1.Beta1</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>jakarta-ee11-shim</artifactId>
    <description>
        Reexport some EE10 packages in versions compatible with EE11 so that some APIs and components continue
        to work.
    </description>

    <dependencies>
        <!-- Downgrade shim for Annotations 2.1 (currently 3.0) required by MicroProfile Rest Client.
        Remove or update this comment once MicroProfile Rest Client has been upgraded. -->
        <dependency>
            <groupId>jakarta.annotation</groupId>
            <artifactId>jakarta.annotation-api</artifactId>
            <scope>provided</scope>
        </dependency>

        <!-- Downgrade shim for JAX-RS, required by MicroProfile Rest Client. Remove once MicroProfile Rest Client upgraded -->
        <dependency>
            <groupId>jakarta.ws.rs</groupId>
            <artifactId>jakarta.ws.rs-api</artifactId>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <executions>
                    <execution>
                        <id>make-transition-exports</id>
                        <goals>
                            <goal>bundle</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <instructions>
                                <!-- ignore warnings -->
                                <_fixupmessages>set to different values in the source,JAR is empty</_fixupmessages>
                                <!-- Add symbolic bundle names of API bundles here -->
                                <Require-Bundle>
                                    <!-- Downgrade shim for Annotations 2.1 (currently 3.0), required by MicroProfile Rest Client -->
                                    jakarta.annotation-api,
                                    <!-- Downgrade shim for JAX-RS, required by MicroProfile Rest Client. Remove once MicroProfile Rest Client upgraded -->
                                    jakarta.ws.rs-api
                                </Require-Bundle>
                                <!-- Manually specify the shim versions of packages to be exported via this bundle -->
                                <!-- Note the "shortened" syntax here: For every API the packages are delimited with
                                semicolon, then followed with version attribute and shim attribute (this one is
                                informational though). Spares from repeating the version for every package of the api.
                                 We drop uses attributes as well. -->
                                <Export-Package>
                                    <!-- Downgrade shim for Annotations 2.1 (now 3.0), required by MicroProfile Rest Client -->
                                    jakarta.annotation;
                                    jakarta.annotation.security;
                                    jakarta.annotation.sql;version="2.1.99";shim=true,
                                    <!-- Downgrade shim for JAX-RS, required by MicroProfile Rest Client. Remove once MicroProfile Rest Client upgraded -->
                                    jakarta.ws.rs;
                                    jakarta.ws.rs.client;
                                    jakarta.ws.rs.container;
                                    jakarta.ws.rs.core;
                                    jakarta.ws.rs.ext;
                                    jakarta.ws.rs.sse;version="3.1.99";shim=true
                                </Export-Package>
                            </instructions>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
