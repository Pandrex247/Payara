<?xml version="1.0" encoding="UTF-8"?>
<arquillian xmlns="http://jboss.org/schema/arquillian"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

  <!-- Remote: conecta a um Payara já em execução, sem secure-admin -->
  <container qualifier="payara-remote" default="true">
    <configuration>
      <adminHost>localhost</adminHost>
      <adminPort>4848</adminPort>
      <httpPort>8080</httpPort>
      <adminSecure>false</adminSecure>
      <deploymentTimeout>300000</deploymentTimeout>
    </configuration>
  </container>
</arquillian>